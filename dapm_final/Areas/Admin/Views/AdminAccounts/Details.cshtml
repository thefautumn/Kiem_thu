@model dapm_final.Models.Account

@{
    ViewData["Title"] = "Chi Tiết Tài Khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
} @* xong *@


<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang Chủ</a>
            <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index" class="breadcrumb-item">Danh Sách Tài Khoản</a>
            <span class="breadcrumb-item active">Thông Tin Tài Khoản</span>
        </nav>
    </div>
</div>

<div class="page-header no-gutters has-tab">
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="media align-items-center m-b-15">
            <div class="avatar avatar-image rounded" style="height:70px; width:70px">
                <img src="~/images/customer/Avatar.png" alt="Avatar" />
            </div>
            <div class="m-l-15">
                <h4 class="m-b-0">@Model.FullName</h4>
                <p class="text-muted m-b-0">ID: #@Model.AccountId</p>
            </div>
        </div>
        <div class="m-b-15">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Edit" asp-route-id="@Model.AccountId">Chỉnh Sửa</a>
        </div>
    </div>
</div>

<div class="card-body">
    <h4 class="card-title">Thông Tin Tài Khoản: @Model.FullName</h4>
    <div class="table-responsive">
        <table class="product-info-table m-t-20">
            <tbody>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.AccountId):</td>
                    <td class="text-dark font-weight-semibold">@Model.AccountId</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.FullName):</td>
                    <td>@Html.DisplayFor(model => model.FullName)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Phone):</td>
                    <td>@Html.DisplayFor(model => model.Phone)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Email):</td>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Password):</td>
                    <td>@Html.DisplayFor(model => model.Password)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Salt):</td>
                    <td>@Html.DisplayFor(model => model.Salt)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.LastLogin):</td>
                    <td>@Html.DisplayFor(model => model.LastLogin)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.CreateDate):</td>
                    <td>@Html.DisplayFor(model => model.CreateDate)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Role):</td>
                    <td>@Html.DisplayFor(model => model.Role.RoleId)</td>
                </tr>
                <tr>
                    <td>Trạng Thái:</td>
                    <td>
                        @if (Model.Active)
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" checked="" disabled />
                                <label for="switch-1"></label>
                            </div>
                        }
                        else
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" disabled />
                                <label for="switch-1"></label>
                            </div>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>