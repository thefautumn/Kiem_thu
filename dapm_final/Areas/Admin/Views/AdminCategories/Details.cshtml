@model dapm_final.Models.Category

@{
    ViewData["Title"] = "Chi Tiết Danh Mục Sản Phẩm " + Model.CatName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
} @* xong *@

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang Chủ</a>
            <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Index" class="breadcrumb-item">Danh Sách Danh Mục</a>
            <span class="breadcrumb-item active">Thôn Tin Danh Mục: @Model.CatName</span>
        </nav>
    </div>
</div>

<div class="page-header no-gutters has-tab">
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="media align-items-center m-b-15">
            <div class="avatar avatar-image rounded" style="height:70px; width:70px">
                <img src="~/images/category/@Model.Thumb" alt="@Model.Title" />
            </div>
            <div class="m-l-15">
                <h4 class="m-b-0">@Model.CatName</h4>
                <p class="text-muted m-b-0">ID: #@Model.CatId</p>
            </div>
        </div>
        <div class="m-b-15">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminCategories" asp-action="Edit" asp-route-id="@Model.CatId">Chỉnh Sửa</a>
        </div>
    </div>
</div>

<div class="card-body">
    <h4 class="card-title">Thông Tin Danh Mục: @Model.CatName</h4>
    <div class="table-responsive">
        <table class="product-info-table m-t-20">
            <tbody>
                <tr>
                    <td>ID:</td>
                    <td class="text-dark font-weight-semibold">@Model.CatId</td>
                </tr>
                <tr>
                    <td>Tên Danh Mục:</td>
                    <td>@Model.CatName</td>
                </tr>
                <tr>
                    <td>Mô Tả:</td>
                    <td>@Html.Raw(Model.Description)</td>
                </tr>
                <tr>
                    <td>Ordering:</td>
                    <td>@Model.Ordering</td>
                </tr>
                <tr>
                    <td>Public:</td>
                    <td>
                        @if (Model.Published)
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" checked="" disabled />
                                <label for="switch-1"></label>
                            </div>
                        }
                        else
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" disabled />
                                <label for="switch-1"></label>
                            </div>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
