@model dapm_final.Models.Role

@{
    ViewData["Title"] = "Xác Nhận Xóa Quyền Truy Cập " + Model.RoleName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@* xong *@

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang Chủ</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Danh Sách Quyền Truy Cập</a>
            <span class="breadcrumb-item active">Xác Nhận Xóa Quyền Truy Cập: @Model.RoleName</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông Tin Quyền Truy Cập: @Model.RoleName</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.RoleId</td>
                    </tr>
                    <tr>
                        <td>Tên Quyền Truy Cập:</td>
                        <td>@Model.RoleName</td>
                    </tr>
                    <tr>
                        <td>Mô Tả:</td>
                        <td>@Model.Description</td>
                    </tr>
                    <tr>
                        <td>
                            <form asp-action="Delete" asp-route-id="@Model.RoleId ">
                                <input type="hidden" asp-for="RoleId" />
                                <input type="submit" value="Xác Nhận Xóa" class="btn btn-danger" />
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>