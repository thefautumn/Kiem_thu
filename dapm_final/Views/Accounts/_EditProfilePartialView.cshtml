@model dapm_final.ModelViews.EditProfileViewModel

<div class="myaccount-details">
    <form asp-controller="Accounts" asp-action="EditProfile" method="post" class="myaccount-form">
        <div class="myaccount-form-inner">
            <div class="single-input">
                <label>Họ và tên</label>
                <input id="FullName" name="FullName" asp-for="FullName" type="text">
            </div>
            <div class="single-input">
                <label>Số điện thoại</label>
                <input id="Phone" name="Phone" asp-for="Phone" type="text">
            </div>
            <div class="single-input">
                <label>Địa chỉ</label>
                <input id="Address" name="Address" asp-for="Address" type="text">
            </div>
            <div class="single-input">
                <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0" type="submit">
                    <span>Lưu thay đổi</span>
                </button>
            </div>
        </div>
    </form>
</div>